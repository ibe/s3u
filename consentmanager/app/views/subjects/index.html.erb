<h1>Listing subjects</h1>

<table class="person">
  <tr>
    <th>Prename</th>
    <th>Surname</th>
    <th># Consents</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @subjects.each do |subject| %>
  <tr>
    <td><%= subject.prename %></td>
    <td><%= subject.surname %></td>
    <td><%= subject.consents.size %></td>
    <td><%= link_to 'Show', subject %></td>
    <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
    <td><%= link_to 'Destroy', subject, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

