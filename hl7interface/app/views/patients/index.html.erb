<h1>Listing patients</h1>

<table class="person">
  <tr>
    <th><%= sortable "extId" %></th>
    <th><%= sortable "prename" %></th>
    <th><%= sortable "surname" %></th>
    <th><%= sortable "dob", "date of birth" %></th>
    <th><%= sortable "sex" %></th>
    <th></th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%= patient.extId %></td>
    <td><%= patient.prename %></td>
    <td><%= patient.surname %></td>
    <td><%= patient.dob %></td>
    <td><%= patient.sex %></td>
    <td><%= link_to 'Show', patient %></td>
  </tr>
<% end %>
</table>